<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/com_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/com_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/com_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <Button
        android:id="@+id/com_bt_inbluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="蓝牙"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/com_guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/com_bt_inlazyviewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="lazyz"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/com_guideline2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/com_guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/com_rg_selectRb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/com_bt_invidoview"
        app:layout_constraintEnd_toStartOf="@id/com_guideline"
        app:layout_constraintStart_toStartOf="@id/com_guideline2"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >

        <RadioButton
            android:id="@+id/com_rg_rb_mp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美拍"
            android:textSize="18sp"
            android:textColor="#FF000000"
            android:enabled="false"/>
        <RadioButton
            android:id="@+id/com_rg_rb_ks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快手"
            android:textSize="18sp"
            android:textColor="#FF000000"
            android:enabled="false"/>
        <RadioButton
            android:id="@+id/com_rg_rb_dy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抖音"
            android:textSize="18sp"
            android:textColor="#9C9C9C"
            android:enabled="false"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/com_rg_tv_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF000000"
            android:text="更多"/>
    </RadioGroup>
    <Button
        android:id="@+id/com_bt_invidoview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短视频"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/com_guideline"
        app:layout_constraintStart_toStartOf="@id/com_guideline2"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/com_bt_injiexi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="解析"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/com_guideline"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>